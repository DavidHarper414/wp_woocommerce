{
	"$schema": "https://turborepo.org/schema.json",
	"baseBranch": "origin/trunk",
	"pipeline": {
		"turbo:lint": {
			"cache": false
		},

		"lint:fix": {
			"cache": false
		},

		"turbo:build": {
			"dependsOn": [ "^turbo:build", "$WC_ADMIN_PHASE" ],
			"inputs": [
				"src/*.js",
				"src/**/*.js",
				"src/*.jsx",
				"src/**/*.jsx",
				"src/*.ts",
				"src/**/*.ts",
				"src/*.tsx",
				"src/**/*.tsx",
				"src/*.php",
				"src/**/*.php",
				"includes/*.php",
				"includes/**/*.php"
			],
			"outputs": [
				"dist/**",
				"build/**",
				"build-module/**",
				"build-style/**",
				"build-types/**"
			]
		},

		"woocommerce#turbo:build": {
			"dependsOn": [
				"^turbo:build",
				"woocommerce/client/admin#turbo:build",
				"woocommerce/client/legacy#turbo:build"
			],
			"outputs": [],
			"inputs": [
				"src/*.php",
				"src/**/*.php",
				"includes/*.php",
				"includes/**/*.php"
			]
		},

		"woocommerce/client/admin#turbo:build": {
			"dependsOn": [ "^turbo:build", "$WC_ADMIN_PHASE" ],
			"outputs": [],
			"inputs": [
				"client/*.js",
				"client/**/*.js",
				"client/*.jsx",
				"client/**/*.jsx",
				"client/*.ts",
				"client/**/*.ts",
				"client/*.tsx",
				"client/**/*.tsx",
				"client/*.scss",
				"client/**/*.scss"
			]
		},

		"turbo:test": {
			"dependsOn": [ "turbo:build" ],
			"inputs": [
				"src/*.js",
				"src/**/*.js",
				"src/*.jsx",
				"src/**/*.jsx",
				"src/*.ts",
				"src/**/*.ts",
				"src/*.tsx",
				"src/**/*.tsx",
				"src/*.php",
				"src/**/*.php",
				"includes/*.php",
				"includes/**/*.php"
			],
			"outputs": []
		},

		"turbo:e2e": {
			"dependsOn": [ "turbo:build" ],
			"cache": false
		},
		"e2e:debug": {
			"dependsOn": [ "turbo:build" ],
			"cache": false
		},
		"e2e:dev": {
			"dependsOn": [ "turbo:build" ],
			"cache": false
		}
	}
}
