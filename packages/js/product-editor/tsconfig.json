{
	"extends": "../tsconfig",
	"compilerOptions": {
		"rootDir": "src",
		"noCheck": false,
		"outDir": "build-module",
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "./build-types",
		"resolveJsonModule": true,
		"typeRoots": [
			"./typings",
			"./node_modules/@types"
		]
	},
	"include": [
		"typings/**/*",
		"src/**/*",
	],
	"exclude": [
		"./wireit",
		"./build",
		"./node_modules",
		"./build-module",
		"./build-style",
		"./build-types"
	]
}
